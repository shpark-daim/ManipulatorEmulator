<Window x:Class="Manipulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Manipulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="420" Width="300">

    <Window.Resources>
        <Style x:Key="PrettyToggleButton" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border Name="Border" 
                                    Background="#FFDDDDDD" 
                                    BorderBrush="#FF707070"
                                    Opacity="0.5"
                                    BorderThickness="1" 
                                    CornerRadius="10" 
                                    Width="60" 
                                    Height="20"/>
                            <Ellipse Name="Thumb" 
                                     Fill="White" 
                                     Stroke="#FF707070" 
                                     StrokeThickness="1" 
                                     Width="15" 
                                     Height="15" 
                                     HorizontalAlignment="Left" 
                                     Margin="3,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="LightCoral"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,3,0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#FF333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 토글 영역 -->
        <Border Grid.Row="0" 
                Background="#FFF0F0F0" 
                BorderBrush="#FFCCCCCC" 
                BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <TextBlock Text="xms" 
                           VerticalAlignment="Center" 
                           FontSize="12" 
                           FontWeight="Bold"
                           Margin="0,0,10,0"/>
                <ToggleButton Name="MqttToggle" 
                              Style="{StaticResource PrettyToggleButton}"
                              Checked="MqttToggle_Checked" 
                              Unchecked="MqttToggle_Unchecked"/>
                <TextBlock Text="aas" 
                           VerticalAlignment="Center" 
                           FontSize="12" 
                           FontWeight="Bold"
                           Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 왼쪽 영역 -->
            <StackPanel Grid.Column="0" Margin="10">

                <!-- S2 박스와 버튼들 -->
                <StackPanel Margin="0,0,0,10">
                    <!-- S2 정사각형 박스 -->
                    <Border Name="s2" 
                        Width="120" 
                        Height="120" 
                        BorderBrush="DarkGray" 
                        BorderThickness="2" 
                        Background="LightSteelBlue"
                        HorizontalAlignment="Center">
                        <TextBlock Text="S2" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               FontSize="16" 
                               FontWeight="Bold"/>
                    </Border>

                    <!-- S2 버튼들 -->
                    <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,10,0,0">
                        <Button Name="S2_L" 
                            Content="L" 
                            Width="40" 
                            Height="30" 
                            Margin="0,0,10,0"
                            BorderBrush="DarkGray"
                            IsEnabled="False"/>
                        <Button Name="S2_U" 
                            Content="U" 
                            Click="S2_U_Click"
                            Width="40" 
                            Height="30"
                            BorderBrush="DarkGray"/>
                    </StackPanel>
                </StackPanel>

                <!-- S1 박스와 버튼들 -->
                <StackPanel>
                    <!-- S1 정사각형 박스 -->
                    <Border Name="s1" 
                        Width="120" 
                        Height="120" 
                        BorderBrush="DarkGray" 
                        BorderThickness="2" 
                        Background="LightSteelBlue"
                        HorizontalAlignment="Center">
                        <TextBlock Text="S1" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               FontSize="16" 
                               FontWeight="Bold"/>
                    </Border>

                    <!-- S1 버튼들 -->
                    <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,10,0,0">
                        <Button Name="S1_L" 
                            Content="L" 
                            Click="S1_L_Click"
                            Width="40" 
                            Height="30" 
                            Margin="0,0,10,0"
                            BorderBrush="DarkGray"/>
                        <Button Name="S1_U" 
                            Content="U" 
                            Width="40" 
                            Height="30"
                            IsEnabled="False"
                            BorderBrush="DarkGray"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>

            <!-- 오른쪽 Manipulator 영역 -->
            <Border Grid.Column="1" 
                Background="LightGray" 
                BorderBrush="DarkGray" 
                BorderThickness="2" 
                Margin="10">
                <Grid>
                    <!-- 중앙 Manipulator 텍스트 -->
                    <TextBlock Text="Manipulator" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           FontSize="15"
                           Foreground="DarkSlateGray"/>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>
